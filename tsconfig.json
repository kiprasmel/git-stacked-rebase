{
	"compilerOptions": {
		"target": "es2017",
		"module": "commonjs",
		"lib": [
			//
			"dom",
			"es6",
			"es2017",
			"esnext.asynciterable"
		],
		"declaration": true,
		"skipLibCheck": false,
		"sourceMap": true,
		"outDir": "./dist",
		"moduleResolution": "node",
		"removeComments": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"baseUrl": ".",
		"types": [
			//
			"node"
		]
	},
	"exclude": [
		//
		/**
		 * do not exclude node_modules
		 */
		// "node_modules"
	],
	"include": [
		//
		"./src/**/*.ts",
		"./**/*.ts",
		/**
		 * my own package, exported w/ typescript,
		 * thus we can edit directly.
		 *
		 * see also the `ts-node` config below.
		 *
		 */
		"node_modules/nice-comment"
	],
	"ts-node": {
		"files": true,
		"ignore": [
			/**
			 * same as ts-node's default, except does not ignore nice-comment
			 */
			// "(?:^|/)node_modules/" //
			"(?:^|/)node_modules/(?!nice-comment)"
		]
	}
	// TODO: test project references
}
